/**index.wxss**/
.adoptContainer{
  min-height : 100vh;
  background: url(https://me2-mai.oss-cn-shenzhen.aliyuncs.com/mini-prog/images/bg.png) no-repeat center;
  background-size:100% 100%;
  padding:15px 8px;
}
.adoptContainer .adoptTips{
  width:100%;
  height:270px;
  padding:24px 15px 45px;
  box-sizing: border-box;
  font-size:12px;
  color:#333333;
  line-height:20px;
  background: url(https://me2-mai.oss-cn-shenzhen.aliyuncs.com/mini-prog/images/tipsBg.png) no-repeat center;
  background-size:100% 100%;
}
.adoptTips .pt20{
  padding-top:20px;
}
.cardbar{
  width:160px;
  height:200px;
  margin:0 auto;
  background:url(https://me2-mai.oss-cn-shenzhen.aliyuncs.com/mini-prog/images/rabbitBg.png) no-repeat center;
  background-size:100% 100%;
  text-align:center;
}
.cardbar .name{
  font-size:13px;
  color:#FFFFFF;
  line-height:100%;
  width:100%;
  padding-top:29px;
}
.cardbar .tuzi{
  width:90px;
  height:131px;
  margin-top:12px;
}
.toadopt{
  width:100%;
  text-align:center;
  margin-top:60px;
}
.toadopt .adoptbtn{
  width:177px;
  height:40px;
}
.popwrap{
  position:fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  background: rgba(0, 0, 0, 0.8);
  z-index:999;
}
.popwrap .popInner{
  width:314px;
  height:400px;
  margin:15% auto;
  background:url(https://me2-mai.oss-cn-shenzhen.aliyuncs.com/mini-prog/images/sucPop.png) no-repeat center;
  background-size:100% 100%;
}
.popwrap .popInner .title{
  font-size:22px;
  color:#FFFFFF;
  line-height:26px;
  text-align:center;
  padding-top:24px;
}
.popwrap .popInner .popCon{
  text-align:center;
}
.popInner .closeico{
  position:absolute;
  top:20px;
  right:10px;
  width:40px;
  height:40px;
}
.popCon .rabbitimg{
  width:90px;
  height:130px;
  display:block;
  margin:33px auto 10px;
}
.popCon .text{
  font-size:11px;
  color:#fff;
  line-height:15px;
  padding-top:8px;
  padding-bottom:4px;
}
.popCon .nameput{
  width:210px;
  height:30px;
  box-sizing: border-box;
  background:#CF8112;
  border:1px solid #FFD263;
  border-radius:15px;
  color:#fff;
  margin:0 auto;
}
.popCon .confirm{
  margin-top:20px;
}
.popCon .confirm .btn{
  width:175px;
  height:38px;
}
.popCon .lovetext{
  font-size:13px;
  color:#fff;
  line-height:16px;
  width:68%;
  text-align:left;
  margin:60px auto 0;
}
.popCon .pen{
  width:73px;
  height:66px;
  display:block;
  margin:25px auto 5px;
}
.popCon .foodtext{
  font-size:11px;
  color:#fff;
  line-height:100%;
}